<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1">
	<TextView android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent" android:gravity="center"
		android:layout_weight="0.07"
		android:text="@string/titleStatusUpdate" />
	<EditText android:layout_width="match_parent" android:gravity="top" android:layout_weight="0.93"
		android:layout_height="wrap_content" android:text="@string/hitText" android:id="@+id/editTextStatus">
		<requestFocus />
	</EditText>
	<Button android:layout_height="wrap_content"
		android:layout_width="match_parent" android:text="@string/buttonUpdate" android:id="@+id/buttonUpdateStatus"/>
</LinearLayout>
